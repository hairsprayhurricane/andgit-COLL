<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calculator_background"
    tools:context=".calculator.presentation.ui.CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/calculator_background"
        android:elevation="4dp"
        app:title="@string/calculator_title"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/grid_margin">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/display_background"
            android:gravity="center_vertical|end"
            android:padding="@dimen/display_padding"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/display_text_size"
            android:maxLines="2"
            android:ellipsize="start"
            tools:text="2 + 3 Ã— 4" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/display_background"
            android:gravity="center_vertical|end"
            android:padding="@dimen/display_padding"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/result_text_size"
            android:visibility="gone"
            tools:text="= 14"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/display_background"
            android:gravity="center_vertical|end"
            android:padding="@dimen/display_padding"
            android:textColor="@color/error_color"
            android:textSize="@dimen/result_text_size"
            android:visibility="gone"
            tools:text="Error"
            tools:visibility="gone" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            android:layout_marginTop="@dimen/grid_margin">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_function"
                android:text="@string/button_clear"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_function"
                android:text="@string/button_delete"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnParentheses"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_function"
                android:text="@string/button_parentheses"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_operator"
                android:text="@string/button_divide"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_7"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_8"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_9"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_operator"
                android:text="@string/button_multiply"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_4"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_5"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_6"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_operator"
                android:text="@string/button_minus"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_1"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_2"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_3"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_operator"
                android:text="@string/button_plus"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_0"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/button_number"
                android:text="@string/button_dot"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/button_margin"
                android:backgroundTint="@color/purple_700"
                android:text="@string/button_equals"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>
